
<div class="row mt-5">
  <div class="col-auto offset-1 bg-gray">
    <h4 class="mb-0">商品一覧</h4>
  </div>
</div>

<div class="row  wrap">
  <% @itemall.each do |item| %>
    <div class="col-auto ml-3 mt-4">
      <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :image, size: "230x150", format: 'jpeg', fallback: "no_image.jpg" %>
      <%end%>
      <h6 class="mt-2"><%= item.name%></h6>
      <h6 class="mt-2">￥<%= item.price %></h6>
    </div>
  <%end%>
</div>
  