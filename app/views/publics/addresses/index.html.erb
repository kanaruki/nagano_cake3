<div class="row mt-5">
  <div class="col-auto offset-1 bg-gray">
    <h4 class="mb-0">配送先登録/一覧</h4>
  </div>
</div>

<%= form_with model: @address, url: addresses_path, method: :POST, local:true do |f| %>
  <div class="row mt-5">
    <div class="col-3">
      郵便番号(ハイフンなし)
    </div>
    <div class="col-3">
      <%= f.text_field :postal_code,class: 'form-control',autofocus: true %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      住所
    </div>
    <div class="col-6">
      <%= f.text_field :address,class: 'form-control'%>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      宛名
    </div>
    <div class="col-3">
      <%= f.text_field :name,class: 'form-control' %>
    </div>
    <div class="col-2 offset-3">
      <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
    </div>
  </div>
<%end%>
<div class="row">
  <div class="col-10">
    <table class="table table-bordered border-dark mt-5">
      <thead>
        <tr>
          <th class="col-2">郵便番号</th><th class="col-5">住所</th><th class="col-2">宛名</th><th class="col-3"></th>
        </tr>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code%></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %><%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger mr-3" %>
            </td>
          </tr>
        <%end%>
      </thead>
    </table>
  </div>
</div>

