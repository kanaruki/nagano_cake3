<div class="row mt-5">
  <div class="col-auto offset-1 bg-gray">
    <h4 class="mb-0">会員情報編集</h4>
  </div>
</div>

<%= form_with model: @customer, url: customers_customers_infomation_path(@customer), local:true do |f| %>
  <div class="row mt-5">
    <div class="col-3">
      名前
    </div>
    <div class="col-3">
      <%= f.text_field :last_name,class: 'form-control',autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="col-3">
      <%= f.text_field :first_name,class: 'form-control', autofocus: true, autocomplete: "first_name" %>
    </div>
  </div>
  
  <div class="row mt-2">
    <div class="col-3">
      フリガナ
    </div>
    <div class="col-3">
      <%= f.text_field :last_name_kana, class: 'form-control', autofocus: true, autocomplete: "last_name_kana" %>
    </div>
    <div class="col-3 mr-1">
      <%= f.text_field :first_name_kana,class: 'form-control', autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      郵便番号(ハイフンなし)
    </div>
    <div class="col-3">
      <%= f.text_field :postal_code,class: 'form-control',autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      住所
    </div>
    <div class="col-8">
      <%= f.text_field :address,class: 'form-control',autofocus: true, autocomplete: "address" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      電話番号(ハイフンなし)
    </div>
    <div class="col-3">
      <%= f.text_field :telephone_number,class: 'form-control',autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      メールアドレス
    </div>
    <div class="col-3">
      <%= f.text_field :email,class: 'form-control',autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3"></div>
    <div class="col-3">
      <%= f.submit "変更内容を保存", class: "btn btn-success btn-block" %>
    </div>
    <div class="col-auto offset-2">
      <button type="button" class="btn btn-danger btn-block">退会する</button>
    </div>
  </div>
<% end %>