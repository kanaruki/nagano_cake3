<div class="row mt-5">
  <div class="col-auto offset-1 bg-gray">
    <h4 class="mb-0">マイページ</h4>
  </div>
</div>
<div class="row mt-5">
  <div class="col-auto">
    <h4 class="line-height mt-auto">登録情報</h4>
  </div>
  <div class="col-auto">
    <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success btn-block"%>
  </div>
</div>
<div class="row">
  <div class="col-7">
    <table class="table mt-3 border border-dark">
      <tr><th class="col-4"> 氏名</th><td><%= @customer.last_name %><%= @customer.first_name %></td></tr>
      <tr><th class="col-4">カナ</th><td><%= @custolast_name_kana %><%= @customer.first_name_kana %></td></tr>
      <tr><th class="col-4">郵便番号</th><td><%= @customer.postal_code %></td></tr>
      <tr><th class="col-4">住所</th><td><%= @customer.address %></td></tr>
      <tr><th class="col-4">電話番号</th><td><%= @customer.telephone_number %></td></tr>
      <tr><th class="col-4">メールアドレス</th><td><%= @customer.email %></td></tr>
    </table>
  <div class="col-5"></div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-2"><h5>配送先</h5></div>
  <div class="col-2">
      <%= link_to "一覧をみる", addresses_path, class: "btn btn-block btn-primary" %>
  </div>
</div>
<div class="row mt-3">
  <div class="col-2"><h5>注文履歴</h5></div>
  <div class="col-2">
    <%= link_to "一覧をみる", orders_path, class: "btn btn-block btn-primary" %>
  </div>
</div>