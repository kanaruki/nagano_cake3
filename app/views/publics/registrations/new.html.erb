<div class="row mt-5">
  <div class="col-auto offset-1 bg-gray">
    <h4>新規会員登録</h4>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>
  
  <div class="row mt-5">
    <div class="col-3">
      名前
    </div>
    <div class="col-3">
      <%= f.text_field :last_name,class: 'form-control',autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="col-3">
      <%= f.text_field :first_name,class: 'form-control', autofocus: true, autocomplete: "first_name" %>
    </div>
  </div>
  
  <div class="row mt-2">
    <div class="col-3">
      フリガナ
    </div>
    <div class="col-3">
      <%= f.text_field :last_name_kana,class: 'form-control',autofocus: true, autocomplete: "last_name_kana" %>
    </div>
    <div class="col-3 mr-1">
      <%= f.text_field :first_name_kana,class: 'form-control', autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  </div>
  
  <div class="row mt-2">
    <div class="col-3">
      メールアドレス
    </div>
    <div class="col-3">
      <%= f.text_field :email,class: 'form-control',autofocus: true, autocomplete: "last_name_kana" %>
    </div>
  </div>
  
  <div class="row mt-2">
    <div class="col-3">
      郵便番号(ハイフンなし)
    </div>
    <div class="col-3">
      <%= f.text_field :postal_code,class: 'form-control',autofocus: true, autocomplete: "last_name_kana" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      住所
    </div>
    <div class="col-8">
      <%= f.text_field :address,class: 'form-control',autofocus: true, autocomplete: "last_name_kana" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      電話番号(ハイフンなし)
    </div>
    <div class="col-3">
      <%= f.text_field :telephone_number,class: 'form-control',autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      パスワード(６文字以上)
    </div>
    <div class="col-3">
      <%= f.text_field :encrypted_password,class: 'form-control',autofocus: true, autocomplete: "encrypted_password" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      パスワード(確認用)
    </div>
    <div class="col-3">
      <%= f.text_field :encrypted_password,class: 'form-control',autofocus: true, autocomplete: "encrypted_password" %>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-3"></div>
    <div class="col-3">
      <button type="button" class="btn btn-success btn-block">新規登録</button>
    </div>
  </div>
  

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "publics/shared/links" %>
