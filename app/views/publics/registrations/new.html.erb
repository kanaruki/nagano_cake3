<div class="row mt-5">
  <div class="col-auto offset-1 bg-gray">
    <h4 class="mb-0">新規会員登録</h4>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>
  <div class="row mt-5">
    <div class="col-3">
      名前
    </div>
    <div class="col-3">
      <%= f.text_field :last_name,class: 'form-control',autofocus: true %>
    </div>
    <div class="col-3">
      <%= f.text_field :first_name,class: 'form-control' %>
    </div>
  </div>
  
  <div class="row mt-2">
    <div class="col-3">
      フリガナ
    </div>
    <div class="col-3">
      <%= f.text_field :last_name_kana, class: 'form-control' %>
    </div>
    <div class="col-3 mr-1">
      <%= f.text_field :first_name_kana,class: 'form-control' %>
    </div>
  </div>
  
  <div class="row mt-2">
    <div class="col-3">
      メールアドレス
    </div>
    <div class="col-3">
      <%= f.text_field :email,class: 'form-control' %>
    </div>
  </div>
  
  <div class="row mt-2">
    <div class="col-3">
      郵便番号(ハイフンなし)
    </div>
    <div class="col-3">
      <%= f.text_field :postal_code,class: 'form-control' %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      住所
    </div>
    <div class="col-8">
      <%= f.text_field :address,class: 'form-control' %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      電話番号(ハイフンなし)
    </div>
    <div class="col-3">
      <%= f.text_field :telephone_number,class: 'form-control' %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      パスワード(６文字以上)
    </div>
    <div class="col-3">
      <%= f.password_field :password,class: 'form-control' %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      パスワード(確認用)
    </div>
    <div class="col-3">
      <%= f.password_field :password_confirmation,class: 'form-control' %>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-3"></div>
    <div class="col-3">
      <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>

<div class="row mt-5">
  <div class="col-auto offset-1 bg-gray">
    <h4 class="mb-0">既に登録済みの方</h4>
  </div>
</div>
<div class="row mt-3">
  <div class="col-auto offset-2">
    <%= link_to "こちら", new_customer_session_path %>
  </div>
  <div class="col-auto">
    <h6>からログインを行なってください。</h6>
  </div>
</div>
