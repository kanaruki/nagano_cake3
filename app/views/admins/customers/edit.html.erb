<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <% @customer.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="row mt-5">
  <div class="col-auto offset-1 bg-gray">
    <h4 class="mb-0"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  </div>
</div>

<%= form_with model: @customer, url: admins_customer_path(@customer), local:true do |f| %>
  <div class="row mt-5">
    <div class="col-3">
      会員ID
    </div>
    <div class="col-auto">
      <%= @customer.id %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3">
      氏名
    </div>
    <div class="col-3">
      <%= f.text_field :last_name,class: 'form-control',autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="col-3">
      <%= f.text_field :first_name,class: 'form-control', autofocus: true, autocomplete: "first_name" %>
    </div>
  </div>
  
  <div class="row mt-2">
    <div class="col-3">
      フリガナ
    </div>
    <div class="col-3">
      <%= f.text_field :last_name_kana, class: 'form-control', autofocus: true, autocomplete: "last_name_kana" %>
    </div>
    <div class="col-3 mr-1">
      <%= f.text_field :first_name_kana,class: 'form-control', autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      郵便番号(ハイフンなし)
    </div>
    <div class="col-3">
      <%= f.text_field :postal_code,class: 'form-control',autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      住所
    </div>
    <div class="col-8">
      <%= f.text_field :address,class: 'form-control',autofocus: true, autocomplete: "address" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      電話番号(ハイフンなし)
    </div>
    <div class="col-3">
      <%= f.text_field :telephone_number,class: 'form-control',autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      メールアドレス
    </div>
    <div class="col-3">
      <%= f.text_field :email,class: 'form-control',autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3 mt-auto mb-auto">
      会員ステータス
    </div>
    <div class="col-8">
      <div class="row">
        <div class="col-auto">
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "有効" %>
        </div>
        <div class="col-auto">
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "退会" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3"></div>
    <div class="col-2">
      <%= f.submit "変更を保存", class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>
