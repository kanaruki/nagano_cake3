<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <% @item.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="row mt-5">
  <div class="col-auto offset-1">
    <h4 class="mb-0 bg-gray">商品新規登録</h4>
  </div>
</div>
<%= form_with model: @item, url: admins_items_path(@item), method: :POST, local:true do |f| %>
    <div class="row mt-5">
      <div class="col-7 mx-auto">
        <div class="row">
          <div class="col-3 mt-auto mb-auto">
            商品画像
          </div>
          <div class="col-8">
            <%= f.attachment_field :image %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-3 mt-auto mb-auto">
            商品名
          </div>
          <div class="col-8">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-3 mt-auto mb-auto">
            商品説明
          </div>
          <div class="col-8">
            <%= f.text_area :introduction, class: 'form-control' %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-3 mt-auto mb-auto">
            ジャンル
          </div>
          <div class="col-8">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--", class:"col-6" %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-2 mt-auto mb-auto">
            税抜価格
          </div>
          <div class="col-8 offset-1">
            <%= f.text_field :price, class: 'form-control' %>
          </div>
          <div class="col-auto mt-auto mb-auto">円</div>
        </div>
        <div class="row mt-3">
          <div class="col-3 mt-auto mb-auto">
            販売ステータス
          </div>
          <div class="col-8">
            <div class="row">
              <div class="col-auto">
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active, "販売中" %>
              </div>
              <div class="col-auto">
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active, "販売停止中" %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-4 mx-auto mt-4">
          <%= f.submit "新規登録" , class: "btn btn-success btn-block" %>
        </div>
      </div>
    </div>
<%end%>
