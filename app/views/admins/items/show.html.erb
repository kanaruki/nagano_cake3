<div class="row mt-5">
  <div class="col-auto offset-1 bg-gray">
    <h4 class="mb-0">商品詳細</h4>
  </div>
</div>
<div class="row mt-5">
  <div class="col-auto">
   <%= attachment_image_tag @item, :image, size: "300x200", format: 'jpeg', fallback: "no_image.jpg" %>
  </div>
  <div class="col-6 ml-3">
    <div class="row">
      <div class="col-3">商品名</div>
      <div class="col-8"><h5><%= @item.name %></h5></div>
    </div>
    <div class="row mt-3">
      <div class="col-3">商品説明</div>
      <div class="col-8"><h5><%= @item.introduction %></h5></div>
    </div>
    <div class="row mt-3">
      <div class="col-3">ジャンル</div>
      <div class="col-8"><h5><%= @item.genre.name %></h5></div>
    </div>
    <div class="row mt-3">
      <div class="col-3">税込価格
        <div class="row-auto">
          (税抜価格)
        </div>
      </div>
      <div class="col-8 my-auto"><h5><%= @item.price*1.1 %>(<%= @item.price %>)円</h5></div>
    </div>
    <div class="row mt-4">
      <div class="col-3">販売ステータス</div>
      <div class="col-8">
        <% if @item.is_active == true then %>
          <h5 class="text-success">販売中</h6>
        <%else%>
          <h5 class="text-black-50">販売停止中</h5>
        <%end%> 
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-2 mx-auto mt-5">
    <%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-success btn-block" %>
  </div>
</div>