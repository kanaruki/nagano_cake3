<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <% @genre.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="row mt-5">
  <div class="col-auto offset-1">
    <h4 class="mb-0 bg-gray">ジャンル編集</h4>
  </div>
</div>
<%= form_with model: @genre, url: admins_genre_path, method: :PATCH, local:true do |f| %>
  <div class="row mt-5">
    <div class="col-auto ml-1 mt-auto mb-auto">ジャンル名</div>
    <div class="col-3">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="col-2">
      <%= f.submit "変更を保存",class: "btn btn-success btn-block" %>
    </div>
  </div>
<%end%>
